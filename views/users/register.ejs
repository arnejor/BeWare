<body>
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-2 col-xl-4 offset-xl-0">
                <div class="card shadow" style="width: 500px;">
                    <div style="margin-left: 20px; margin-top: 15px;">  <img src="/javascripts/logo.JPG"
                        alt="" class="card-img-top" style="width: 450px;"/>
                    </div> 
                    <div class="card-body">
                        <h5 class="card-title">Register</h5>
                        <form action="/register" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Enter Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="form-div mb-4">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="text" id="email", name="email" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="form-div mb-4">
                                <label class="form-label" for="passwprd">Password</label>
                                <input class="form-control" type="password" id="password", name="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button class="login    ">Submit</button>
                        </form>

                        <button style="margin-top: 10px;" onclick="location.href='/login'" type="button" class="reg">Allready have an account? Login!</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>