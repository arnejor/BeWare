<% layout('layouts/boilerplate') -%>



<link rel="stylesheet" href="/javascripts/stylesheets/login.css">

    <link rel="stylesheet" href="/javascripts/stylesheets/style.css">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

<body>
    

    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-2 col-xl-4 offset-xl-0">
                <div class="card shadow" style="width: 500px;">
                    <img src="/javascripts/logo.JPG"
                        alt="" class="card-img-top" style="width: 400px;"/>
                    <div class="card-body">
                        <h5 class="card-title">Login</h5>
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
    
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button class="login    ">Login</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>